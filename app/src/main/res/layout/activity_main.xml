<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAdivinaElNumero"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/gray">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adivina el numero"
            android:textSize="30dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ingrese un numero y que otra persona, intente adivinarlo"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAdivinaElNumeroSecreto"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/gray">

        <TextView
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adivina el numero secreto"
            android:textSize="30dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDescription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="se crea un numero aleatorio entre 0 y 99 y tenes que intentar adivinarlo"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:paddingStart="10dp"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>





</LinearLayout>